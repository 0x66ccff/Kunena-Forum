<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="community">
	<name>MyKunena</name>
	<version>1.0.0</version>
	<author>www.kunena.com</author>
	<creationDate>@kunenaversiondate@</creationDate>
	<build>@kunenabuild@</build>
	<copyright>Copyright (C) 2008. All rights reserved.</copyright>
	<license></license>
	<authorEmail>info@kunena.com</authorEmail>
	<authorUrl>www.kunena.com</authorUrl>
	<isapplication>true</isapplication>
	<isbrowseable>true</isbrowseable>
	
	<description>
		MyKunena plugin for JomSocial
	</description>
	<files>
		<file plugin="MyKunena">kunena.php</file>
		<file>kunena/favicon.png</file>
		<file>kunena/no-post.gif</file>
		<file>kunena/style.css</file>
	</files>
	
	<menuitem>
		<menu label="Groups" position="toolbar">
			<link label="Groups">task=groups</link>
		</menu>
	</menuitem>
	
	<params>
		<param name="count" type="text" default="5" label="Updates count" description="How many updates to display" />	
		<param name="coreapp" type="list" default="0" label="Core Application" description="Causes this application to not appearin the users applications list but it will allow this application to appear in the user profile automatically if selected.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this plugin">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
	</params>
</install>
