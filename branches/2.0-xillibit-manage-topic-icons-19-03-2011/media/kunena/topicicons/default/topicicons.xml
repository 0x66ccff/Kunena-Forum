<?xml version="1.0" ?>
<!DOCTYPE kunena-topicicons>
<kunena-topicicons type="kunena-topicicons"> 
	<name>default</name>
	<version>1.0</version>
	<creationDate>2011-14-05</creationDate>
	<author>Kunena Team</author>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>Kunena</copyright>
	<license>GNU/GPL</license>
	<thumbnail>template_thumbnail.png</thumbnail>
	<system>
		<location type="state" x="16" y="0" width="16" height="16" opacity="50" />
		<location type="user" x="16" y="16" width="16" height="16" opacity="50" />
		<location type="mode1" x="0" y="16" width="16" height="16" opacity="50" />
		<location type="mode2" x="0" y="0" width="16" height="16" opacity="50" />

		<icon type="state" name="unapproved" src="system/unapproved.png" />
		<icon type="state" name="deleted" src="system/deleted.png" />
		<icon type="state" name="new" src="system/new.png" />

		<icon type="user" name="favorite" src="system/favorite.png" />
		<icon type="user" name="own" src="system/own.png" />
		<icon type="user" name="replied" src="system/replied.png" />
		<icon type="user" name="noreplies" src="system/noreplies.png" />

		<icon type="mode1" name="sticky" src="system/sticky.png" />
		<icon type="mode2" name="locked" src="system/locked.png" />
	</system>

	<tags>
		<location x="32" y="*" width="16" height="16" opacity="50" />

		<icon name="bug" src="tags/bug.png" />
		<icon name="configuration" src="tags/config.png" />
		<icon name="javascript" src="tags/javascript.png" />
	</tags>

	<icons>
		<location width="48" height="48" opacity="0" />
			<icon id="1" name="default" published="1" ordering="1" isdefault="1" title="COM_KUNENA_ICON_DEFAULT" src="default/topic-default.png" />
			<icon id="2" name="exclamation" published="1" ordering="2" isdefault="0" title="COM_KUNENA_ICON_EXCLAMATION" src="default/topic-exclamation.png" />
			<icon id="3" name="grin" published="1" ordering="3" isdefault="0" title="COM_KUNENA_ICON_GRIN" src="default/topic-grin.png" />
			<icon id="4" name="love" published="1" ordering="4" isdefault="0" title="COM_KUNENA_ICON_LOVE" src="default/topic-love.png" />
			<icon id="5" name="mark" published="1" ordering="5" isdefault="0" title="COM_KUNENA_ICON_MARK" src="default/topic-mark.png" />
			<icon id="6" name="question" published="1" ordering="6" isdefault="0" title="COM_KUNENA_ICON_QUESTION" src="default/topic-question.png" />
			<icon id="7" name="shock" published="1" ordering="7" isdefault="0" title="COM_KUNENA_ICON_SHOCK" src="default/topic-shock.png" />
			<icon id="8" name="arrow" published="1" ordering="8" isdefault="0" title="COM_KUNENA_ICON_ARROW" src="default/topic-arrow.png" />
			<icon id="9" name="smile" published="1" ordering="9" isdefault="0" title="COM_KUNENA_ICON_SMILE" src="default/topic-smile.png" />
	</icons>

 	<rules>
		<rule name="new">
			<state default="open" />
		</rule>
		<rule action="reply" user="owner">
		<state from="open" default="open" allow="open,solved" />
			<state from="solved" default="solved" allow="open,solved" />
			<state from="more-user" default="open" allow="open,solved" />
			<state from="more-dev" default="more-dev" allow="more-dev,open,solved" />
		</rule>
		<rule action="reply" user="moderator">
			<state from="*" allow="open,solved,more-user,more-dev" />
		</rule>
	</rules>
</kunena-topicicons>