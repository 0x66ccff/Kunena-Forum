<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: component.xml 31 2008-11-11 06:04:14Z eddieajau $ -->
<config>
	<params>
		<param
			name="global-board_email"
			type="text"
			size="50"
			label="FB Config Board Email"
			description="FB Config Board Email Desc"
			default="" />

		<param name="global-online"
			type="radio"
			label="FB Config Board Online"
			description="FB Config Board Online Desc"
			default="1">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		
		<param name="global-offline_text"
			type="textarea"
			rows="3"
			cols="50"
			label="FB Config Offline Message"
			description="FB Config Offline Message Desc"
			default="" />

		<param
			name="global-timezone"
			type="timezones"
			label="FB Config Timezone"
			description="FB Config Board Timezone Desc"
			default="" />

		<param name="global-post_style"
			type="radio"
			label="FB Config Post Style"
			description="FB Config Post Style Desc"
			default="flat">
			<option value="flat">FB Config Style Flat</option>
			<option value="threaded">FB Config Style Threaded</option>
		</param>

		<param name="global-enable_rss"
			type="radio"
			label="FB Config RSS Feeds"
			description="FB Config RSS Feeds Desc"
			default="1">
			<option value="0">Disabled</option>
			<option value="1">Enabled</option>
		</param>
	</params>
</config>