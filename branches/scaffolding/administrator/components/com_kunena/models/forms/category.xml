<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields>
		<field name="id" type="hidden" id="id"
			default="0"
			label="KUNENA_CATEGORY_ID"
			class="inputbox readonly"
			size="6"
			required="true"
			readonly="true"
		/>

		<field name="parent_id" type="kunenacategories" id="parent_id"
			label="KUNENA_CATEGORY_PARENT"
			description="KUNENA_CATEGORY_PARENT_DESC"
			default="1"
			filter="int"
			allow_none="1"
			class="inputbox"
		/>

		<field name="title" type="text" id="title"
			label="KUNENA_CATEGORY_TITLE"
			description="KUNENA_CATEGORY_TITLE_DESC"
			default=""
			required="true"
			class="inputbox validate required"
			size="50"
		/>

		<field name="alias" type="text" id="alias"
			label="KUNENA_CATEGORY_ALIAS"
			description="KUNENA_CATEGORY_ALIAS_DESC"
			default=""
			class="inputbox"
			size="50"
		/>

		<field name="path" type="text" id="path"
			label="KUNENA_CATEGORY_PATH"
			description="KUNENA_CATEGORY_PATH_DESC"
			class="readonly"
			size="30"
			readonly="true"
		/>

		<field name="icon" type="text" id="icon"
			label="KUNENA_CATEGORY_ICON"
			description="KUNENA_CATEGORY_ICON_DESC"
			default=""
			class="inputbox"
			size="30"
		/>

		<field name="summary" type="textarea" id="summary"
			label="KUNENA_CATEGORY_SUMMARY"
			description="KUNENA_CATEGORY_SUMMARY_DESC"
			default=""
			class="inputbox"
			cols="30"
			rows="3"
			size="30"
		/>

		<field name="description" type="editor" id="body"
			label="KUNENA_CATEGORY_DESCRIPTION"
			default=""
			filter="safehtml"
			buttons="readmore,pagebreak"
			class="inputbox"
			cols="50"
			height="400"
			rows="10"
		/>

		<field name="published" type="radio" id="published"
			label="KUNENA_CATEGORY_PUBLISHED"
			description="KUNENA_CATEGORY_PUBLISHED_DESC"
			default="1"
			filter="int"
			required="true"
			class="inputbox"
		>
			<option value="0">No</option>
			<option value="1">Yes</option>
			<option value="-2">Trash</option>
		</field>

		<field name="ordering" type="categoryordering" id="ordering"
			label="KUNENA_CATEGORY_ORDERING"
			description="KUNENA_CATEGORY_ORDERING_DESC"
			default="0"
			filter="int"
			allow_first="1"
			allow_last="1"
			class="inputbox"
			size="6"
		/>

		<field name="access" type="accesslevel" id="access"
			label="KUNENA_CATEGORY_ACCESS"
			description="KUNENA_CATEGORY_ACCESS_DESC"
			default="0"
			filter="int"
			sections="com_kunena"
			class="inputbox"
		/>

		<field name="class_sfx" type="text" id="class_sfx"
			label="KUNENA_CATEGORY_CSS_CLASS"
			description="KUNENA_CATEGORY_CSS_CLASS_DESC"
			default=""
			class="inputbox"
			size="30"
		/>

		<field name="locked" type="radio" id="locked"
			label="KUNENA_CATEGORY_LOCKED"
			description="KUNENA_CATEGORY_LOCKED_DESC"
			default="0"
			filter="int"
		>
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>

		<field name="moderated" type="radio" id="moderated"
			label="KUNENA_CATEGORY_MODERATED"
			description="KUNENA_CATEGORY_MODERATED_DESC"
			default="0"
			filter="int"
		>
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>

		<field name="alert_admin" type="radio" id="alert_admin"
			label="KUNENA_CATEGORY_ALERT_ADMIN"
			description="KUNENA_CATEGORY_ALERT_ADMIN_DESC"
			default="0"
			filter="int"
		>
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>

		<field name="hits" type="text"
			label="KUNENA_CATEGORY_HITS"
			default="0"
			filter="unset"
			readonly="true"
		/>

		<field name="last_post_id" type="text"
			label="KUNENA_CATEGORY_LAST_POST_ID"
			filter="unset"
			readonly="true"
		/>

		<field name="last_post_time" type="text"
			label="KUNENA_CATEGORY_LAST_POST_TIME"
			filter="unset"
			readonly="true"
		/>

		<field name="total_threads" type="text"
			label="KUNENA_CATEGORY_TOTAL_THREADS"
			default="0"
			filter="unset"
			readonly="true"
		/>

		<field name="total_posts" type="text"
			label="KUNENA_CATEGORY_TOTAL_POSTS"
			default="0"
			filter="unset"
			readonly="true"
		/>

		<field name="left_id" type="hidden"
			label="KUNENA_CATEGORY_LEFT_ID"
			filter="unset"
		/>

		<field name="right_id" type="hidden"
			label="KUNENA_CATEGORY_RIGHT_ID"
			filter="unset"
		/>
	</fields>
</form>