<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields>
		<field name="id"
			type="hidden"
			id="id"
			class="inputbox readonly"
			label="KUNENA_RANK_ID"
			size="6"
			default="0"
			required="true"
			readonly="true" />

		<field name="title"
			type="text"
			id="title"
			class="inputbox validate required"
			label="KUNENA_RANK_TITLE"
			size="50"
			default=""
			description="KUNENA_RANK_TITLE_DESC"
			required="true" />

		<field name="alias"
			type="text"
			id="alias"
			class="inputbox"
			label="KUNENA_RANK_ALIAS"
			size="50"
			default=""
			description="KUNENA_RANK_ALIAS_DESC" />

		<field name="minimum_posts"
			type="text"
			id="minimum_posts"
			class="inputbox"
			label="KUNENA_RANK_MINIMUM_POSTS"
			description="KUNENA_RANK_MINIMUM_POSTS_DESC"
			size="6"
			default="5" />

		<field name="special"
			type="radio"
			id="special"
			class="inputbox"
			label="KUNENA_RANK_SPECIAL"
			description="KUNENA_RANK_SPECIAL_DESC"
			default="1"
			required="true">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>

		<field name="image_path"
			type="text"
			id="image_path"
			class="inputbox"
			label="KUNENA_RANK_IMAGE_PATH"
			description="KUNENA_RANK_IMAGE_PATH_DESC"
			size="30" />
	</fields>
</form>