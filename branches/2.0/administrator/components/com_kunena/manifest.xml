<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<install type="component" version="1.5.0" method="upgrade">
    <name>Kunena</name>
    <version>1.0Alpha</version>
    <creationDate>November 2008</creationDate>
    <author>Kunena Development Team</author>
    <authorEmail>info@kunena.com</authorEmail>
    <authorUrl>http://www.kunena.com</authorUrl>
    <copyright>(C) 2008 Kunena. All rights reserved.</copyright>
    <license>GNU General Public License</license>
    <description>...</description>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">install/installsql.mysql.utf8.php</file>
		</sql>
	</install>

	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">install/uninstallsql.mysql.utf8.php</file>
		</sql>
	</uninstall>

	<languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_kunena.ini</language>
	</languages>

	<files folder="site">
		<file>kunena.php</file>
		<file>index.html</file>
		<file>router.php</file>

		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>media</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<administration>
        <menu link="option=com_kunena">Kunena</menu>

		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_kunena.ini</language>
		</languages>

		<files folder="admin">
		</files>
	</administration>

	<installfile>install/install.php</installfile>
	<uninstallfile>install/uninstall.php</uninstallfile>

</install>